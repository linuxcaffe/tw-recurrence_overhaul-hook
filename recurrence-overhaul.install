VERSION="2.4.3"
APPNAME="recurrence-overhaul"
BASE_URL="https://raw.githubusercontent.com/linuxcaffe/tw-recurrence_overhaul-hook/main/"

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
NC='\033[0m'

tw_msg() { echo -e "${BLUE}[tw]${NC} $*"; }
tw_success() { echo -e "${GREEN}[tw] ÃƒÆ’Ã‚Â¢Ãƒâ€¦Ã¢â‚¬Å“ÃƒÂ¢Ã¢â€šÂ¬Ã…â€œ${NC} $*"; }
tw_error() { echo -e "${RED}[tw] ÃƒÆ’Ã‚Â¢Ãƒâ€¦Ã¢â‚¬Å“ÃƒÂ¢Ã¢â€šÂ¬Ã¢â‚¬ï¿½${NC} $*" >&2; }

# Debug support
DEBUG_LEVEL="${TW_DEBUG:-0}"
debug_msg() {
    local msg="$1"
    local level="${2:-1}"
    if [[ $DEBUG_LEVEL -ge $level ]]; then
        echo -e "${BLUE}[DEBUG-$level]${NC} $msg" >&2
    fi
}

debug_msg "Starting installer with DEBUG_LEVEL=$DEBUG_LEVEL" 1

# Directories
HOME="${HOME:-$(eval echo ~$USER)}"
TASKRC="${HOME}/.taskrc"
TASK_DIR="${HOME}/.task"
HOOKS_DIR="${TASK_DIR}/hooks"
SCRIPTS_DIR="${TASK_DIR}/scripts"
CONFIG_DIR="${TASK_DIR}/config"
DOCS_DIR="${TASK_DIR}/docs"

# ============================================================================
# Installation Function
# ============================================================================

install() {
    tw_msg "Installing recurrence-overhaul v$VERSION..."
    debug_msg "Starting installation" 1

    # Create directories
    tw_msg "Creating directories..."
    mkdir -p "$HOOKS_DIR" "$SCRIPTS_DIR" "$CONFIG_DIR" "$DOCS_DIR"
    debug_msg "Directories created" 2

    tw_msg "Downloading files..."
    debug_msg "Using BASE_URL: $BASE_URL" 2

    debug_msg "Downloading hook: on-add_recurrence.py" 2
    curl -fsSL "$BASE_URL/on-add_recurrence.py" -o "$HOOKS_DIR/on-add_recurrence.py" || {
        tw_error "Failed to download on-add_recurrence.py"
        debug_msg "Download failed: on-add_recurrence.py" 1
        return 1
    }
    chmod +x "$HOOKS_DIR/on-add_recurrence.py"
    debug_msg "Installed hook: $HOOKS_DIR/on-add_recurrence.py" 2

    debug_msg "Downloading hook: on-exit_recurrence.py" 2
    curl -fsSL "$BASE_URL/on-exit_recurrence.py" -o "$HOOKS_DIR/on-exit_recurrence.py" || {
        tw_error "Failed to download on-exit_recurrence.py"
        debug_msg "Download failed: on-exit_recurrence.py" 1
        return 1
    }
    chmod +x "$HOOKS_DIR/on-exit_recurrence.py"
    debug_msg "Installed hook: $HOOKS_DIR/on-exit_recurrence.py" 2

    debug_msg "Downloading script: recurrence-overhaul.install" 2
    curl -fsSL "$BASE_URL/recurrence-overhaul.install" -o "$SCRIPTS_DIR/recurrence-overhaul.install" || {
        tw_error "Failed to download recurrence-overhaul.install"
        debug_msg "Download failed: recurrence-overhaul.install" 1
        return 1
    }
    chmod +x "$SCRIPTS_DIR/recurrence-overhaul.install"
    debug_msg "Installed script: $SCRIPTS_DIR/recurrence-overhaul.install" 2

    debug_msg "Downloading script: rr" 2
    curl -fsSL "$BASE_URL/rr" -o "$SCRIPTS_DIR/rr" || {
        tw_error "Failed to download rr"
        debug_msg "Download failed: rr" 1
        return 1
    }
    chmod +x "$SCRIPTS_DIR/rr"
    debug_msg "Installed script: $SCRIPTS_DIR/rr" 2

    debug_msg "Downloading config: recurrence.rc" 2
    curl -fsSL "$BASE_URL/recurrence.rc" -o "$CONFIG_DIR/recurrence.rc" || {
        tw_error "Failed to download recurrence.rc"
        debug_msg "Download failed: recurrence.rc" 1
        return 1
    }
    debug_msg "Installed config: $CONFIG_DIR/recurrence.rc" 2

    # Add config to .taskrc
    tw_msg "Adding configuration to .taskrc..."
    local config_line="include $CONFIG_DIR/recurrence.rc"

    if ! grep -qF "$config_line" "$TASKRC" 2>/dev/null; then
        echo "$config_line" >> "$TASKRC"
        tw_msg "Added config include to .taskrc"
        debug_msg "Added to .taskrc: $config_line" 2
    else
        tw_msg "Config already in .taskrc"
        debug_msg "Config already present in .taskrc" 2
    fi

    tw_msg "Downloading documentation..."
    curl -fsSL "$BASE_URL/README.md" -o "$DOCS_DIR/recurrence-overhaul_README.md" 2>/dev/null || true
    debug_msg "Downloaded doc: $DOCS_DIR/recurrence-overhaul_README.md" 2

    # Track in manifest
    debug_msg "Writing to manifest" 2
    MANIFEST_FILE="${HOME}/.task/config/.tw_manifest"
    TIMESTAMP=$(date -u +"%Y-%m-%dT%H:%M:%SZ")
    mkdir -p "$(dirname "$MANIFEST_FILE")"

    echo "$APPNAME|$VERSION|$HOOKS_DIR/on-add_recurrence.py||$TIMESTAMP" >> "$MANIFEST_FILE"
    debug_msg "Manifest entry: $HOOKS_DIR/on-add_recurrence.py" 3
    echo "$APPNAME|$VERSION|$HOOKS_DIR/on-exit_recurrence.py||$TIMESTAMP" >> "$MANIFEST_FILE"
    debug_msg "Manifest entry: $HOOKS_DIR/on-exit_recurrence.py" 3
    echo "$APPNAME|$VERSION|$SCRIPTS_DIR/recurrence-overhaul.install||$TIMESTAMP" >> "$MANIFEST_FILE"
    debug_msg "Manifest entry: $SCRIPTS_DIR/recurrence-overhaul.install" 3
    echo "$APPNAME|$VERSION|$SCRIPTS_DIR/rr||$TIMESTAMP" >> "$MANIFEST_FILE"
    debug_msg "Manifest entry: $SCRIPTS_DIR/rr" 3
    echo "$APPNAME|$VERSION|$CONFIG_DIR/recurrence.rc||$TIMESTAMP" >> "$MANIFEST_FILE"
    debug_msg "Manifest entry: $CONFIG_DIR/recurrence.rc" 3
    echo "$APPNAME|$VERSION|$DOCS_DIR/recurrence-overhaul_README.md||$TIMESTAMP" >> "$MANIFEST_FILE"
    debug_msg "Manifest entry: $DOCS_DIR/recurrence-overhaul_README.md" 3

    debug_msg "Installation complete" 1
    tw_success "Installed recurrence-overhaul v$VERSION"
    echo ""
    tw_msg "Documentation: $DOCS_DIR/recurrence-overhaul_README.md"
    echo ""

    return 0
}

# ============================================================================
# Removal Function
# ============================================================================

remove() {
    tw_msg "Removing recurrence-overhaul..."
    debug_msg "Starting removal" 1

    MANIFEST_FILE="${HOME}/.task/config/.tw_manifest"
    if [ ! -f "$MANIFEST_FILE" ]; then
        tw_error "Manifest file not found"
        return 1
    fi

    # Remove files based on manifest
    grep "^$APPNAME|" "$MANIFEST_FILE" | cut -d"|" -f3 | while read -r file; do
        if [ -f "$file" ]; then
            rm "$file"
            debug_msg "Removed: $file" 2
            tw_msg "Removed: $(basename $file)"
        fi
    done

    # Remove from manifest
    sed -i.bak "/^$APPNAME|/d" "$MANIFEST_FILE"
    debug_msg "Removed from manifest" 2

    # Remove config from .taskrc
    local config_line="include $CONFIG_DIR/recurrence.rc"
    if grep -qF "$config_line" "$TASKRC" 2>/dev/null; then
        sed -i.bak "\|$config_line|d" "$TASKRC"
        tw_msg "Removed config from .taskrc"
        debug_msg "Removed from .taskrc: $config_line" 2
    fi

    tw_success "Removed recurrence-overhaul"
    return 0
}

# ============================================================================
# Main
# ============================================================================

case "${1:-install}" in
    install)
        install
        ;;
    remove|uninstall)
        remove
        ;;
    *)
        echo "Usage: $0 {install|remove}"
        exit 1
        ;;
esac
